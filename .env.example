# EduBot Smart Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database
DATABASE_URL=sqlite:///edubot.db
# For PostgreSQL: postgresql://user:password@localhost/edubot
# For MySQL: mysql://user:password@localhost/edubot

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-this
CSRF_SECRET_KEY=your-csrf-secret-key-change-this
PASSWORD_SALT=your-password-salt-change-this

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_STORAGE=memory  # or redis://localhost:6379/0

# Redis (if using Redis for caching/rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@edubot.com

# File Upload
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,png,jpg,jpeg,gif

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/edubot.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# External APIs (if needed)
OPENAI_API_KEY=your-openai-api-key-if-using
GOOGLE_API_KEY=your-google-api-key-if-using

# Admin Account
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@edubot.com
ADMIN_PASSWORD=change-this-secure-password

# Application Settings
APP_NAME=EduBot Smart Assistant
APP_VERSION=2.0.0
APP_HOST=0.0.0.0
APP_PORT=5000

# Features Toggles
ENABLE_VOICE=True
ENABLE_IMAGE_PROCESSING=True
ENABLE_LECTURE_NOTES=True
ENABLE_ANALYTICS=True
ENABLE_I18N=True

# Performance
CACHE_ENABLED=True
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Security Headers
ENABLE_HSTS=True
ENABLE_CSP=True
ENABLE_X_FRAME_OPTIONS=True

# Monitoring
ENABLE_PERFORMANCE_MONITORING=True
ENABLE_ERROR_TRACKING=True
SENTRY_DSN=  # If using Sentry for error tracking

# Backup
BACKUP_ENABLED=True
BACKUP_INTERVAL=86400  # Daily
BACKUP_RETENTION=7  # Keep 7 days of backups

# Development
TESTING=False
DEBUG_TOOLBAR=False
